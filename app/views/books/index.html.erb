<body>
<h1>Books</h1>

<table>
      <thead>
          <tr class="item">
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
          </tr>
      </thead>

    <% @books.each do |book| %>

    <tbody>
        <tr class="eachitem">
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td class="command"><%= link_to "Show" , book_path(book.id) %></td>
          <td class="command"><%= link_to "Edit" , edit_book_path(book.id) %></td>
          <td class="command"><%= link_to "Destroy" , book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
    </tbody>
  
    <% end %>
</table>
<h2>New Book</h2>
<div id="error">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="sounyu">
  <h4 class="create">Title</h4>
  <%= f.text_field :title %>
  </div>
  <div class="sounyu">
  <h4 class="create">Body</h4>
  <%= f.text_area :body %>
	</div>
  <p class="create create2"><%= f.submit 'Create Book' %></p>
<% end %>
</body>